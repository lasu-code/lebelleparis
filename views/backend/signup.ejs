<body style="background: #343a40;">
    <div class="container">
        <br>
        <br>
        <br>
        <br>
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm border-top border-bottom m-5 p-4">
                <h3 class="text-center text-info">Sign <span class="text-light">Up</span></h3>
                <form action="/signup"  method="POST">
                    <div class="input-group input-group-sm mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-success"><span class="fa fa-user "></span></div>
                        </div>
                        <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Username" name="email">
                    </div>

                    <div class="input-group input-group-sm mt-4">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><span class="fa fa-lock"></span></div>
                        </div>
                        <input type="password" class="form-control" id="inlineFormInputGroup" placeholder="password" name="password">
                    </div>

                    <div class="border-top mt-3 pt-4">
                        
                        <button class="btn btn-warning btn-sm float-right" type="submit">Create Account</button>
                    </div>
                </form>

            </div>
            <div class="col-sm">

            </div>
        </div>
    </div>

